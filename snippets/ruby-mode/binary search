# -*- mode: snippet -*-
# name: binary search
# key: binary 
# --

def binary_search(array, target)
  left = 0
	right = array.length - 1
  middle = array.length / 2

  while left < right
    if array[middle] == target
		  return middle
		elsif array[middle] < target
		  left = middle + 1
			middle = left + right / 2
		else
		  right = middle - 1
			middle = left + right / 2
		end
  end

  -1
end